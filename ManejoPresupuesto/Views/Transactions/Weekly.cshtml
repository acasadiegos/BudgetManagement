@model WeeklyReportViewModel

@{
    ViewData["Title"] = "Weekly Report";

    string DateFormat(DateTime date)
    {
        return date.ToString("MM.dd");
    }

    var amountResume = new AmountResumeViewModel()
    {
      Incomes = Model.Incomes,
      Egress = Model.Egress,
      Total = Model.Total
    };

}

<partial name="_Submenu" Model="TransactionSubmenu.Weekly"/>

<partial name="_MonthNavigation" model="@Model.DateReference"/>

<partial name="_AmountResume" model="@amountResume"/>

<table class="table" style="font-size: 20px;">
    <thead>
        <tr>
            <th>Week</th>
            <th style="text-align: right">Incomes</th>
            <th style="text-align: right">Egress</th>
        </tr>
    </thead>
    @foreach(var transactionsByWeek in Model.WeeklyTransactions)
    {
        <tr>
            <td>
                <a style="text-decoration: none"
                asp-action="Index" asp-route-year="@Model.DateReference.Year"
                asp-route-month="@Model.DateReference.Month">@DateFormat(transactionsByWeek.StartDate) ~ 
                    @DateFormat(transactionsByWeek.EndDate)</a>
            </td>
            <td class="activo" style="text-align: right">
                @transactionsByWeek.Incomes
            </td>
            <td class="pasivo" style="text-align: right">
                @transactionsByWeek.Egress
            </td>
        </tr>

    }
</table>
